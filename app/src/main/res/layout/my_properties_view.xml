<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#FFFCFC">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">
            <ImageView
                android:id="@+id/viewImage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"
                android:weightSum="4.6">
                <TextView
                    android:paddingTop="2dp"
                    android:paddingLeft="5dp"
                    android:id="@+id/viewAddress"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.4"
                    android:text="ADDRESS"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/viewPurpose"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".8"
                    android:text="for what"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:fontFamily="@font/open_sans"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:textColor="@color/Red"/>

                <TextView
                    android:id="@+id/viewPrice"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".8"
                    android:text="Price"
                    android:gravity="center_vertical"
                    android:textSize="22sp"
                    android:paddingLeft="10dp"
                    android:fontFamily="@font/open_sans"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/viewDate"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="12/12/2020"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:fontFamily="@font/open_sans"
                        android:gravity="center_vertical"/>
                    <ImageView
                        android:id="@+id/viewEdit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:src="@drawable/ic_edit_24"/>

                    <ImageView
                        android:id="@+id/viewDelete"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:src="@drawable/ic_delete_24"/>

                </LinearLayout>

                //===not show in cardview===//

                <TextView
                    android:id="@+id/viewDescription"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/viewPropType"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/viewPropAreaSize"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/viewPropTitle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/viewUserName"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/viewUserEmail"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/viewUserPhone"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/viewUserId"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center_vertical"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>